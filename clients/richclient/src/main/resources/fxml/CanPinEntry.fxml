<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
	  xmlns:fx="http://javafx.com/fxml"
	  fx:controller="org.openecard.richclient.pinmanagement.npa.CanEntryViewController"
	  alignment="CENTER" spacing="10">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20"/>
	</padding>

	<Label fx:id="canLabel" text="Enter your CAN"/>
	<PasswordField fx:id="canField" promptText="Enter CAN"/>
	<Label fx:id="pinLabel"/>
	<PasswordField fx:id="pinField" promptText="Enter PIN"/>
	<Button text="Submit" onAction="#handleSubmit"/>
	<Label fx:id="errorLabel" styleClass="error-label"/>
</VBox>
