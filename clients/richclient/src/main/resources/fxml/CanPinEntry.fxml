<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openecard.richclient.pinmanagement.npa.CanEntryViewController">
	<padding>
		<Insets bottom="20" left="20" right="20" top="20" />
	</padding>

	<Label text="%pinmanage_npa_pin_suspend_title" />
	<Label fx:id="infoLabel" text="%pinmanage_npa_pin_suspend_description" />
	<PasswordField fx:id="canField" promptText="%pinmanage_npa_pin_suspend_can_field_initial" />
	<PasswordField fx:id="pinField" promptText="%pinmanage_npa_pin_suspend_pin_field_initial" />
	<Button onAction="#handleSubmit" text="Submit" />
	<Label fx:id="errorLabel" styleClass="error-label" />
</VBox>
