<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.ecsec.skid.client</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>de.ecsec.skid.client</groupId>
	<artifactId>skid-lib-ios</artifactId>
	<packaging>jar</packaging>
	<name>SkID-lib iOS</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<annotationProcessorPaths>
						<annotationProcessorPath>
							<groupId>org.openecard.tools</groupId>
							<artifactId>roboface-processor</artifactId>
							<version>${version.roboface}</version>
						</annotationProcessorPath>
					</annotationProcessorPaths>
					<annotationProcessors>
						<proc>org.openecard.robovm.processor.RobofaceProcessor</proc>
					</annotationProcessors>
					<compilerArgs>
						<arg>-Aroboface.headername=skidlib.h</arg>
						<arg>-Aroboface.include.headers=skid-mobile-lib.h</arg>
					</compilerArgs>
					<debug>true</debug>
					<debuglevel>source,lines,vars</debuglevel>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<!--failOnWarning>true</failOnWarning-->
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- TODO: create fat jar without xerces and slf4j -->
	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.30</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.12.0</version>
		</dependency>


		<!-- Android Activity Stuff / Support Elements -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
			<version>4.4.13</version>
		</dependency>

		<dependency>
			<groupId>de.ecsec.skid.client</groupId>
			<artifactId>skid-lib</artifactId>
			<version>${project.version}</version>
			<classifier>iOS</classifier>
			<exclusions>
				<exclusion>
					<groupId>org.openecard.clients</groupId>
					<artifactId>mobile-lib</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>mobile-lib</artifactId>
			<version>${oec.version}</version>
			<classifier>iOS</classifier>
		</dependency>

		<!-- all OeC dependencies -->
		<dependency>
			<groupId>org.openecard.wsdef</groupId>
			<artifactId>android-marshaller</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.ifd.scio-backend</groupId>
			<artifactId>ios-nfc</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>ios-common</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.tools</groupId>
			<artifactId>roboface-annotation</artifactId>
			<version>${version.roboface}</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-rt</artifactId>
			<version>${robovm.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-cocoatouch</artifactId>
			<version>${robovm.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>1.2.3</version>
			<type>jar</type>
		</dependency>

	</dependencies>

</project>
