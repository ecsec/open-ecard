<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="destination" value="${user.home}/.openecard/logs" />

	<!--<appender name="FILE" class="ch.qos.logback.core.ConsoleAppender">-->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${destination}/richclient_info.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${destination}/richclient_info.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
		<encoder>
			<pattern>%date{"yyyy-MM-dd HH:mm:ss,SSSX"} [%thread] %-5level %class{35}:%line - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="ERROR">
		<appender-ref ref="FILE" />
	</root>

</configuration>
