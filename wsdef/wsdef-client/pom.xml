<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openecard</groupId>
		<artifactId>wsdef</artifactId>
		<version>1.3.0-rc11-SNAPSHOT</version>
	</parent>

	<groupId>org.openecard.wsdef</groupId>
	<artifactId>wsdef-client</artifactId>
	<packaging>jar</packaging>
	<name>Open eCard WS classes</name>

	<!-- Set wsimport for Windows/Linux when building on Java 9 -->
	<profiles>
		<profile>
			<id>win</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<tool.wsimport>${java.home}/bin/wsimport.exe</tool.wsimport>
			</properties>
		</profile>
		<profile>
			<id>nix</id>
			<activation>
				<os>
					<family>!windows</family>
				</os>
			</activation>
			<properties>
				<tool.wsimport>${java.home}/bin/wsimport</tool.wsimport>
			</properties>
		</profile>
		<profile>
			<activation>
				<jdk>[9</jdk>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>jaxws-maven-plugin</artifactId>
							<configuration>
								<executable>${tool.wsimport}</executable>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

	<build>
		<resources>
			<resource>
				<directory>src/main/wsdl</directory>
				<includes>
					<include>**/ALL.wsdl</include>
					<include>**/*.xsd</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>

		<pluginManagement>
			<plugins>
				<!-- skip java 6 compat checker, JAXB is irellevant for android and only SE 7 is supported -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>animal-sniffer-maven-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>All other Services</id>
						<goals>
							<goal>wsimport</goal>
						</goals>
						<configuration>
							<wsdlDirectory>${basedir}/src/main/wsdl</wsdlDirectory>
							<wsdlFiles>
								<wsdlFile>ALL.wsdl</wsdlFile>
							</wsdlFiles>
							<wsdlLocation>ALL.wsdl</wsdlLocation>
							<bindingFiles>
								<bindingFile>${basedir}/src/main/wsdl/serialization.xjc</bindingFile>
							</bindingFiles>
							<!-- <keep>true</keep> -->
							<!-- <verbose>true</verbose> -->
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
