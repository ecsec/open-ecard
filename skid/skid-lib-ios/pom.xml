<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.ecsec.skid.client</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-rc.1</version>
	</parent>

	<groupId>de.ecsec.skid.client</groupId>
	<artifactId>skid-lib-ios</artifactId>
	<packaging>jar</packaging>
	<name>SkID-lib iOS</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<annotationProcessorPaths>
						<annotationProcessorPath>
							<groupId>org.openecard.tools</groupId>
							<artifactId>roboface-processor</artifactId>
							<version>${version.roboface}</version>
						</annotationProcessorPath>
					</annotationProcessorPaths>
					<annotationProcessors>
						<proc>org.openecard.robovm.processor.RobofaceProcessor</proc>
					</annotationProcessors>
					<compilerArgs>
						<arg>-Aroboface.headername=skidlib.h</arg>
						<arg>-Aroboface.include.headers=skid-mobile-lib.h</arg>
					</compilerArgs>
					<debug>true</debug>
					<debuglevel>source,lines,vars</debuglevel>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<!--failOnWarning>true</failOnWarning-->
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<excludes>
									<exclude>org.json:json</exclude>
								</excludes>
							</artifactSet>

							<relocations>
								<relocation>
									<pattern>org.apache.http</pattern>
									<shadedPattern>org.openecard.apache.http</shadedPattern>
								</relocation>

								<!-- relocation>
									<pattern>javax.xml.validation</pattern>
									<shadedPattern>hidden.javax.xml.validation</shadedPattern>
								</relocation-->
							</relocations>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/maven/**</exclude>
										<exclude>META-INF/versions/**</exclude>
										<exclude>META-INF/DEPENDENCIES</exclude>
										<exclude>META-INF/LICENSE*</exclude>
										<exclude>META-INF/NOTICE</exclude>
										<exclude>META-INF/MANIFEST.MF</exclude>
										<!--exclude>org/openecard/bouncycastle/pqc/**</exclude-->
										<exclude>**/module-info.class</exclude>
										<exclude>**/package-info.class</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-jdk14</artifactId>
			<version>1.7.30</version>
		</dependency>


		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.12.0</version>
		</dependency>

		<dependency>
			<groupId>de.ecsec.skid.client</groupId>
			<artifactId>skid-lib</artifactId>
			<version>${project.version}</version>
			<classifier>iOS</classifier>
			<exclusions>
				<exclusion>
					<groupId>org.openecard.clients</groupId>
					<artifactId>mobile-lib</artifactId>
				</exclusion>
			</exclusions>
		</dependency>


		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>mobile-lib</artifactId>
			<version>${oec.version}</version>
			<classifier>iOS</classifier>
			<exclusions>
				<exclusion>
					<groupId>com.github.markusbernhardt</groupId>
					<artifactId>proxy-vole</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.javadelight</groupId>
					<artifactId>delight-nashorn-sandbox</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- all OeC dependencies -->
		<dependency>
			<groupId>org.openecard.wsdef</groupId>
			<artifactId>android-marshaller</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.ifd.scio-backend</groupId>
			<artifactId>ios-nfc</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>ios-common</artifactId>
			<version>${oec.version}</version>
		 <exclusions>
		  <exclusion>
		   <groupId>ch.qos.logback</groupId>
		   <artifactId>logback-classic</artifactId>
		  </exclusion>
		 </exclusions>
		</dependency>

		<dependency>
			<groupId>org.openecard.tools</groupId>
			<artifactId>roboface-marshaller</artifactId>
			<version>${version.roboface}</version>
		</dependency>

		<dependency>
			<groupId>org.openecard.tools</groupId>
			<artifactId>roboface-annotation</artifactId>
			<version>${version.roboface}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-rt</artifactId>
			<version>${robovm.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-cocoatouch</artifactId>
			<version>${robovm.version}</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

</project>
