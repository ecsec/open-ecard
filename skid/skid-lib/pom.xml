<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.ecsec.skid.client</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>de.ecsec.skid.client</groupId>
	<artifactId>skid-lib</artifactId>
	<packaging>jar</packaging>
	<name>SkID-lib</name>

	<properties>
		<powermock.version>2.0.2</powermock.version>
		<iOS.build.classesDirectory>${project.build.outputDirectory}-iOS</iOS.build.classesDirectory>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<executions>
					<execution>
						<id>default-compile</id>
					</execution>
					<execution>
						<id>ios-compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<outputDirectory>${iOS.build.classesDirectory}</outputDirectory>
							<annotationProcessorPaths>
								<annotationProcessorPath>
									<groupId>org.openecard.tools</groupId>
									<artifactId>roboface-processor</artifactId>
									<version>${version.roboface}</version>
								</annotationProcessorPath>
							</annotationProcessorPaths>
							<annotationProcessors>
								<proc>org.openecard.robovm.processor.RobofaceProcessor</proc>
							</annotationProcessors>
							<compilerArgs>
								<arg>-Aroboface.headername=skid-mobile-lib.h</arg>
								<arg>-Aroboface.inheritance.blacklist=java.io.Serializable</arg>
							</compilerArgs>
							<debug>true</debug>
							<debuglevel>source,lines,vars</debuglevel>
							<showDeprecation>true</showDeprecation>
							<showWarnings>true</showWarnings>
							<!--failOnWarning>true</failOnWarning-->
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>default-jar</id>
					</execution>
					<execution>
						<id>iOS-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classesDirectory>${iOS.build.classesDirectory}</classesDirectory>
							<classifier>iOS</classifier>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<classpathDependencyExcludes>
						<classpathDependencyExclude>com.mobidevelop.robovm:robovm-rt</classpathDependencyExclude>
					</classpathDependencyExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-rt</artifactId>
			<version>${robovm.version}</version>
			<optional>true</optional>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-cocoatouch</artifactId>
			<version>${robovm.version}</version>
			<optional>true</optional>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>org.openecard.tools</groupId>
			<artifactId>roboface-annotation</artifactId>
			<optional>true</optional>
			<version>${version.roboface}</version>
			<type>jar</type>
		</dependency>
                
		<dependency>
			<groupId>org.openecard.tools</groupId>
			<artifactId>roboface-marshaller</artifactId>
			<optional>true</optional>
			<version>${version.roboface}</version>
			<type>jar</type>
		</dependency>

		<!-- OeC dependencies -->
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>mobile-lib</artifactId>
			<version>${oec.version}</version>
		</dependency>

		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20190722</version>
		</dependency>
		<dependency>
			<groupId>com.jayway.jsonpath</groupId>
			<artifactId>json-path</artifactId>
			<version>2.4.0</version>
			<exclusions>
				<exclusion>
					<groupId>net.minidev</groupId>
					<artifactId>json-smart</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

