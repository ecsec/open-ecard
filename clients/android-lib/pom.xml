<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openecard</groupId>
		<artifactId>clients</artifactId>
		<version>1.4.10</version>
	</parent>

	<groupId>org.openecard.clients</groupId>
	<artifactId>android-lib-builder</artifactId>
	<packaging>pom</packaging>
	<name>Android Client Lib Builder</name>

	<properties>
		<gradle.cmd>./gradlew</gradle.cmd>
	</properties>

	<profiles>
		<profile>
			<id>windows_gradle_binary</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<gradle.cmd>gradlew.bat</gradle.cmd>
			</properties>
		</profile>
		<profile>
			<id>android</id>
			<activation>
				<!-- activate android when sdk path is defined -->
				<property>
					<name>env.ANDROID_HOME</name>
				</property>
			</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<configuration>
							<executable>${gradle.cmd}</executable>
						</configuration>
						<executions>
							<execution>
								<id>gradle-clean</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<commandlineArgs>clean</commandlineArgs>
								</configuration>
							</execution>
							<execution>
								<id>gradle-compile</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<commandlineArgs>build</commandlineArgs>
								</configuration>
							</execution>
							<execution>
								<id>gradle-install</id>
								<phase>install</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<commandlineArgs>publishToMavenLocal</commandlineArgs>
								</configuration>
							</execution>
							<execution>
								<id>gradle-deploy</id>
								<phase>deploy</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<commandlineArgs>publish</commandlineArgs>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>


	<dependencies>
		<!-- Android Activity Stuff / Support Elements -->
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>android-core</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

</project>
