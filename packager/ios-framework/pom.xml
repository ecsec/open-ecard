<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openecard</groupId>
		<artifactId>packager</artifactId>
		<version>2.0.7</version>
	</parent>

	<groupId>org.openecard.clients</groupId>
	<artifactId>ios-framework</artifactId>
	<packaging>jar</packaging>
	<name>iOS Framework</name>

	<dependencies>
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>ios-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-rt</artifactId>
			<version>${robovm.version}</version>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-cocoatouch</artifactId>
			<version>${robovm.version}</version>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>ios-framework</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>copy-framework-classes</id>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
								<configuration>
									<includeArtifactIds>ios-core</includeArtifactIds>
									<outputDirectory>${basedir}/target/classes/</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>com.mobidevelop.robovm</groupId>
						<artifactId>robovm-maven-plugin</artifactId>
						<version>${robovm.version}</version>
						<executions>
							<execution>
								<goals>
									<goal>install</goal>
								</goals>
								<phase>install</phase>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
