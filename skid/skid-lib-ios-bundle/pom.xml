<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.ecsec.skid.client</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

	<groupId>de.ecsec.skid.client</groupId>
    <artifactId>skid-lib-ios-bundle</artifactId>
    <packaging>jar</packaging>
	<name>SkID-lib iOS Bundle</name>

	<properties>
		<!-- prevent deployment of this artifact as it is not properly built when the build is performed in one run -->
		<maven.deploy.skip>true</maven.deploy.skip>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<!--relocations>
								<relocation>
									<pattern>org.apache.http</pattern>
									<shadedPattern>org.openecard.apache.http</shadedPattern>
								</relocation>
							</relocations-->
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/MANIFEST.MF</exclude>
										<exclude>META-INF/maven/**</exclude>
										<exclude>images/**/*</exclude>
										<exclude>license/*</exclude>
										<exclude>**/module-info.class</exclude>
										<exclude>**/package-info.class</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>com.mobidevelop.robovm:robovm-rt</artifact>
									<excludes>
										<!-- remove security config, so it is added from the resource folder -->
										<exclude>java/security/security.properties</exclude>

										<!-- unused stuff -->
										<exclude>SQLite/**</exclude>
										<exclude>java/awt.font/**/*</exclude>
										<exclude>org/apache/harmony/**/*</exclude>

										<!-- remove duplicate definitions -->
										<exclude>javax/xml/**</exclude>
										<exclude>org/w3c/dom/**</exclude>
										<exclude>org/xml/sax/**</exclude>

										<!--exclude>org/apache/**</exclude-->
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-rt</artifactId>
			<version>${robovm.version}</version>
		</dependency>
		<dependency>
			<groupId>com.mobidevelop.robovm</groupId>
			<artifactId>robovm-cocoatouch</artifactId>
			<version>${robovm.version}</version>
		</dependency>

		<dependency>
			<groupId>de.ecsec.skid.client</groupId>
			<artifactId>skid-lib-ios</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

</project>