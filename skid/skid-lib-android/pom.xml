<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.ecsec.skid.client</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>de.ecsec.skid.client</groupId>
	<artifactId>skid-lib-android</artifactId>
	<packaging>jar</packaging>
	<name>SkID-lib Android</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<!--
							<keepDependenciesWithProvidedScope>
							false
							</keepDependenciesWithProvidedScope>
							<promoteTransitiveDependencies>
							true

							</promoteTransitiveDependencies>
							-->
							<artifactSet>
								<excludes>
									<exclude>com.github.markusbernhardt</exclude>
								</excludes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>org.apache.http</pattern>
									<shadedPattern>org.openecard.apache.http</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- TODO: create fat jar without xerces and slf4j -->
	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
            <version>1.7.30</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.12.0</version>
		</dependency>


		<!-- Android Activity Stuff / Support Elements -->
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
            <version>4.1.1.4</version>
			<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>de.ecsec.skid.client</groupId>
			<artifactId>skid-lib</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- all OeC Android dependencies -->
		<dependency>
			<groupId>org.openecard.wsdef</groupId>
			<artifactId>android-marshaller</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.ifd.scio-backend</groupId>
			<artifactId>android-nfc</artifactId>
			<version>${oec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openecard.clients</groupId>
			<artifactId>android-common</artifactId>
			<version>${oec.version}</version>
		</dependency>
	</dependencies>

</project>
