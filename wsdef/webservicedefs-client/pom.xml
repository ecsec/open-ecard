<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openecard.client</groupId>
    <artifactId>wsdef</artifactId>
    <version>0.0.2-SNAPSHOT</version>
  </parent>

  <groupId>org.openecard.client.wsdef</groupId>
  <artifactId>wsdef-client</artifactId>
  <packaging>jar</packaging>
  <name>openecard Webservice Definitions without jaxws-Engine</name>

  <build>
    <resources>
      <resource>
    	<directory>src/main/wsdl</directory>
    	<includes>
    	  <include>**/ALL.wsdl</include>
    	  <include>**/*.xsd</include>
    	</includes>
      </resource>
    </resources>

    <plugins>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>jaxws-maven-plugin</artifactId>
	<version>1.12</version>
	<executions>
	  <!-- rest -->
	  <execution>
	    <id>All other Services</id>
	    <goals>
	      <goal>wsimport</goal>
	    </goals>
	    <configuration>
	      <wsdlDirectory>${basedir}/src/main/wsdl</wsdlDirectory>
	      <wsdlFiles><wsdlFile>ALL.wsdl</wsdlFile></wsdlFiles>
	      <sourceDestDir>${project.build.directory}/generated-sources/jaxws</sourceDestDir>
	      <target>2.1</target>
	      <xjcArgs>
		<xjcArg>-npa</xjcArg>
	      </xjcArgs>
	      <wsdlLocation>ALL.wsdl</wsdlLocation>
	      <!-- <keep>true</keep> -->
	      <!-- <verbose>true</verbose> -->
	    </configuration>
	  </execution>
	</executions>
        <dependencies>
	  <!-- use version 2.1 as long as there are java6 users out there -->
          <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-tools</artifactId>
            <version>2.1.7</version>
          </dependency>
        </dependencies>
      </plugin>

      <plugin>
	<groupId>org.openecard.client</groupId>
	<artifactId>class-list-plugin</artifactId>
	<version>0.0.2-SNAPSHOT</version>
	<executions>
	  <execution>
	    <phase>process-classes</phase>
	    <goals>
	      <goal>class-list</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>

    </plugins>
  </build>

</project>
