<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
	  xmlns:fx="http://javafx.com/fxml"
	  fx:controller="org.openecard.richclient.pinmanagement.npa.PinChangeController"
	  alignment="CENTER" spacing="10" stylesheets="@../styles.css">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20"/>
	</padding>
	<Label text="Change your PIN"/>
	<PasswordField fx:id="oldPinField" promptText="Old PIN"/>
	<PasswordField fx:id="newPinField" promptText="New PIN"/>
	<PasswordField fx:id="repeatPinField" promptText="Repeat New PIN"/>
	<Button text="Submit" onAction="#handleSubmit"/>
	<Label fx:id="errorLabel" styleClass="error-label"/>
</VBox>
